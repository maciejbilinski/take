@model Pizzeria.Models.Pizza

<h1>Details</h1>

<div>
    <h4>Pizza</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SmallPrice)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SmallPrice)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MediumPrice)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MediumPrice)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LargePrice)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LargePrice)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CrustType)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CrustType)
        </dd>
    </dl>
    <hr/>
    <h5>Toppings</h5>
    <ul>
        <li>Cheese</li>
        <li>Sauce</li>
        @foreach (var topping in Model.Toppings)
        {
            <li>@topping.Name</li>
        }
    </ul>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
