@model Pizzeria.Models.Pizza

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Pizza</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SmallPrice" class="control-label"></label>
                <input asp-for="SmallPrice" class="form-control" type="number" step="0.01" asp-format="{0:n2}" />
                <span asp-validation-for="SmallPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MediumPrice" class="control-label"></label>
                <input asp-for="MediumPrice" class="form-control" type="number" step="0.01" asp-format="{0:n2}"  />
                <span asp-validation-for="MediumPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LargePrice" class="control-label"></label>
                <input asp-for="LargePrice" class="form-control" type="number" step="0.01" asp-format="{0:n2}"  />
                <span asp-validation-for="LargePrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CrustType" class="control-label"></label>
                <select asp-for="CrustType" asp-items="Html.GetEnumSelectList<CrustType>()" class="form-control"></select>
                <span asp-validation-for="CrustType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="toppings" class="control-label"></label>
                <select name="toppings" asp-items="@(new SelectList(ViewBag.Toppings, "Id", "Name"))" class="form-control" multiple></select>
            </div>
            <a asp-action="Create" asp-controller="Toppings">Create New Topping</a>

            <div class="form-group mt-3">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
